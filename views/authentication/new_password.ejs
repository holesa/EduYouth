<%include ../templates/header%>
    
<div class="auth-box">
    <form method="POST" action="/zmena-hesla">
        <div class="form-group-block">
            <label for="password-first">Zadajte nové heslo</label>
            <input id="password-first" type="password" name="passwordFirst"/>
        </div>
        <div class="form-group-block">
            <label for="password-second">Zopakujte heslo</label>
            <input id="password-second" type="password" name="passwordSecond"/>
        </div>
        <input type="hidden" name="token" value="<%=token%>">
        <button type="submit" class="submit-btn">Potvrdiť</button>
    </form>
</div>
<%include ../templates/footer%>