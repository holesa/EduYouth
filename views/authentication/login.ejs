  <%include ../templates/header%>
    
    <div class="auth-box">
      <h2>Prihlásenie</h2>
      <form method='POST' action='/prihlasenie'>
        <div class="form-group-block">
          <label class="form-label" for="login-email">Emailová adresa</label>
          <input type='text' class="form-control" id="login-email" name='email' required>
        </div>
        <div class="form-group-block">
          <label class="form-label" for="login-password">Prihlasovacie heslo</label>
          <input id="login-password" class="form-control" type='password' name='password' required>
        </div>
        <button class="submit-btn" type='submit'>Prihlásiť</button>
    </form>
    <div class="group-block">
      <a href="/strata-hesla">Zabudnuté heslo</a>
    </div>
    </div>
<%include ../templates/footer%>