<%include ../templates/header%>
  <div class="auth-box">
    <h2>Registrácia</h2>
    <form method='POST' action='/registracia'>
       <div class="form-group-block">
          <label class="form-label" for="registration-email">Emailová adresa</label>
          <input id="registration-email" type='email' class="form-control" name='email' required>
       </div>
       <div class="form-group-block">
          <label class="form-label" for="registration-password">Heslo</label>
          <input id="registration-password" type='password' class="form-control" name='password' required>
       </div>
       <button type='submit' class="submit-btn">Registrovať sa</button>
    </form>
  </div>
    
<%include ../templates/footer%>